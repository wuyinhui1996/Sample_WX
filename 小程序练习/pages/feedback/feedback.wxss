/* pages/feedback/feedback.wxss */
view{
  box-sizing: border-box;
}
.feedback-img{
  width: 100%;
  height: 240rpx;
}
.feedback-con{
  width: 100%;
  height: 100%;
  background-color: #fff;
  padding: 29rpx 28rpx 0 28rpx;
}
.feedback-title{
  width: 161rpx;
	height: 26rpx;
	font-family: MicrosoftYaHeiLight;
	font-size: 24rpx;
	line-height: 28rpx;
	letter-spacing: 1rpx;
	color: #333333;
}
.feedback-classify{
  width: 100%;
  margin-top: 26rpx;
  display: flex;
  justify-content: space-between;
}
.classify-btn{
  width: 164rpx;
	height: 57rpx;
	background-color: #ffffff;
	border-radius: 3rpx;
	border: solid 1rpx #dddddd;
  font-size: 20rpx;
  color: #666666;
  text-align: center;
  line-height: 57rpx;
}
.classify-btn.active{
  border: 1rpx solid #c9151e;
  color: #c9151e;
}
.feedback-text{
  width: 100%;
	height: 352rpx;
	border: 1rpx solid #dddddd;
  padding: 33rpx 29rpx;
  margin-top: 23rpx;
  box-sizing: border-box;
}
.feedback-placeholder{
  font-size: 20rpx;
  color: #999999;
}
.feedback-btn{
  width: 376rpx;
	height: 77rpx;
	background-color: #c9151e;
  font-size: 29rpx;
  text-align: center;
